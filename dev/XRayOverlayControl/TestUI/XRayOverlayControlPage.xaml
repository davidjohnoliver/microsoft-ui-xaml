<local:TestPage
    x:Class="MUXControlsTestApp.XRayOverlayControlPage"
    x:Name="XRayOverlayControlTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12">
        <StackPanel x:Name="Panel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <DatePicker/>
            <TimePicker/>
            <Button Content="Test"/>
        </StackPanel>
        <primitives:XRayOverlayControl
            ReplacementColor="Black"
            TargetElement="{Binding ElementName=Panel}"
            Width="200" Height="50"
            Background="White"/>
    </Grid>
</local:TestPage>
